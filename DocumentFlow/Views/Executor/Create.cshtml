@model DocumentFlow.Models.ViewModels.Executor.CreateExecutorViewModel

@{
    Layout = "_Layout";
}

<div class="mx-4" style="width: 50%;">
    <h3>Добавление исполнителя</h3>

    <form class="form-vertical" enctype="multipart/form-data" asp-action="Create" asp-controller="Executor" method="post">
        <div style="color: red" asp-validation-summary="ModelOnly"></div>
        <input type="hidden" name="documentId" asp-for="DocumentId" class="form-control">
        <div class="form-group mb-4">
            <label class="control-label">Описание:</label>
            <input type="text" name="description" asp-for="Description" class="form-control">
        </div>
        <div class="form-group mb-4">
            <label class="control-label">Код:</label>
            <input type="number" name="code" asp-for="Code" class="form-control">
        </div>
        @* <div class="form-group mb-4"> *@
        @*     <label class="control-label">Дата:</label> *@
        @*     <input type="date" id="rangeCalendarFlatpickr" name="executionTime" asp-for="ExecutionTime" class="form-control"> *@
        @* </div> *@
        <div class="form-group mb-4">
            <label class="control-label">Исполнитель:</label>
            <select asp-for="UserId" class="custom-select mb-4">
                @foreach (var users in Model.Users)
                {
                    <option value="@(users.Id)">@users.Name</option>
                }
            </select>
        </div>
        <select type="hidden" asp-for="ExecutorRole" class="custom-select mb-4">
            @foreach (var users in Model.Users)
            {
                <option type="hidden" value="@(users.Role.Name)"></option>
            }
        </select>
        <input type="submit" value="Добавить" class="btn btn-primary ml-3 mt-3">
    </form>
</div>
<script>
   var f3 = flatpickr(document.getElementById('rangeCalendarFlatpickr'), {
    mode: "range"
});
</script>