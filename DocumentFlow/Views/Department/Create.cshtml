@model DocumentFlow.Models.ViewModels.Department.CreateDepartmentViewModel

@{
    Layout = "_Layout";
}
<div class="mx-4" style="width: 50%;">
    <h3>Добавление отдела</h3>
    <form class="form-vertical" enctype="multipart/form-data" asp-action="Create" asp-controller="Department" method="post">
         <div style="color: red" asp-validation-summary="ModelOnly"></div>
        <div class="form-group mb-4">
            <label class="control-label">Название отдела:</label>
            <input type="text" name="name" asp-for="Name" class="form-control">
        </div>
        <input type="submit" value="Добавить" class="btn btn-primary ml-3 mt-3">
    </form>
</div>