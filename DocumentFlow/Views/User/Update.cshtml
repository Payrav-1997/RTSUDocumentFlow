@model DocumentFlow.Models.ViewModels.User.UpdateUserViewModel

@{
    Layout = "_Layout";
}
<div class="mx-4">
    <h1>Редактирование аккаунта</h1>

    <form class="form-vertical" asp-action="Update" asp-controller="User" method="post">
        <div style="color: red" asp-validation-summary="ModelOnly"></div>
          <input type="hidden"  name="id" asp-for="Id" class="form-control" >
        <div class="form-group mb-4">
            <label class="control-label">ФИО:</label>
            <input type="text" name="name" asp-for="Name" class="form-control" value="@Model.Name">
        </div>
        <div class="form-group mb-4">
            <label class="control-label">Номер телефона:</label>
            <input type="text" name="Phone" asp-for="Phone" class="form-control" value="@Model.Phone">
        </div>
        <div class="form-group mb-4">
            <label class="control-label">Адрес:</label>
            <input type="text" name="address" asp-for="Address" class="form-control" value="@Model.Address">
        </div>
        <div class="form-group mb-4">
            <label class="control-label">Почта:</label>
            <input type="email" name="email" asp-for="Email" class="form-control" value="@Model.Email">
        </div>
        <input type="submit" value="Редактировать" class="btn btn-primary ml-3 mt-3">
    </form>
</div>